<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:my_font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="3dp"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/ll_calender_layout_card"
    app:cardBackgroundColor="@color/white">


    <LinearLayout
        android:id="@+id/ll_calender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">


        <com.sujalamsufalam.Widgets.MyTextView
            android:id="@+id/tv_piachart_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_weight="1"

            android:text="1111111"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/medium_text" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical"
            >
            <com.sujalamsufalam.Widgets.MyTextView
                android:id="@+id/tv_piachart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:text="dsdsddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text" />
            <com.sujalamsufalam.Widgets.MyTextView
                android:id="@+id/tv_piachart_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:text="dsdsddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/medium_text" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_calender_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_weight="1"

            android:textSize="@dimen/medium_text" />
    </LinearLayout>

</android.support.v7.widget.CardView>