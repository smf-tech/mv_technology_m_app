<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_edittext_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/grey_box"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_edittext_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="@string/question_5" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_view1"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lighter_grey_box"
            android:padding="10dp">

            <com.sujalamsufalam.Widgets.MyEditTextView
                android:id="@+id/et_process_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textPersonName|textCapSentences"
                android:textColor="@color/black"
                android:hint="@string/please_enter_text"
                android:textSize="@dimen/medium_text" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/grey_box"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_date_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="@string/question_5" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_content_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_view1"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lighter_grey_box"
            android:padding="10dp">

            <com.sujalamsufalam.Widgets.MyEditTextView
                android:id="@+id/et_process_detail_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textPersonName|textCapSentences"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/grey_box"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_pd_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="@string/question_5" />

        <Spinner
            android:id="@+id/sp_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/grey_box"
            android:minHeight="40dp"
            android:padding="@dimen/dimen_5dp"
            android:prompt="@string/question_5"
            android:spinnerMode="dialog" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_headerr_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/grey_bg_sequre"

        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/question_5"
            android:textColor="@color/black"
            android:textSize="17sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/grey_box"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_loc_hed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="@string/question_5" />

        <TextView
            android:id="@+id/loc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/grey_box"
            android:minHeight="40dp"
            android:padding="@dimen/dimen_5dp"
            android:prompt="@string/question_5"
            android:spinnerMode="dialog"
            android:text="Select" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/grey_box"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="8">

        <TextView
            android:id="@+id/check_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_weight="8"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <CheckBox
            android:id="@+id/detail_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:src="@drawable/ic_add_photo" />

        <com.sujalamsufalam.Widgets.MyTextView
            android:id="@+id/tv_img_hed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/edt_unit_purvizalele"
            android:text=""
            android:textSize="@dimen/large_text" />
    </LinearLayout>
</LinearLayout>