<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my_font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.sujalamsufalam.Activity.IndicatorLocationSelectionActivity" />
    </data>

    <LinearLayout

        android:id="@+id/layout_main"
        android:layout_width="match_parent"

        android:weightSum="10"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"


            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">






                <com.sujalamsufalam.Widgets.MyTextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="State"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/medium_text" />

                <LinearLayout
                    android:id="@+id/ly_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinner_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/grey_box"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:prompt="@string/state"
                    android:spinnerMode="dialog" />
                </LinearLayout>


                <com.sujalamsufalam.Widgets.MyTextView
                    android:id="@+id/tv_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/district"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/medium_text" />

                <Spinner
                    android:id="@+id/spinner_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/grey_box"

                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:prompt="@string/district"
                    android:spinnerMode="dialog" />

                <com.sujalamsufalam.Widgets.MyTextView
                    android:id="@+id/tv_taluka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/taluka"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/medium_text" />

                <Spinner
                    android:id="@+id/spinner_taluka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:background="@drawable/grey_box"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:prompt="@string/taluka"
                    android:spinnerMode="dialog" />


                    <com.sujalamsufalam.Widgets.MyEditTextView
                        android:id="@+id/edit_multiselect_taluka"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lighter_grey_box"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:gravity="left|top"
                        android:maxLines="3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text" />

                <com.sujalamsufalam.Widgets.MyTextView
                    android:id="@+id/tv_cluster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/cluster"
                    android:visibility="gone"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/medium_text" />

                <Spinner
                    android:id="@+id/spinner_cluster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:background="@drawable/grey_box"

                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:prompt="@string/cluster"
                    android:spinnerMode="dialog" />

                <com.sujalamsufalam.Widgets.MyTextView
                    android:id="@+id/tv_village"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/village"
                    android:visibility="gone"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/medium_text" />

                <Spinner
                    android:id="@+id/spinner_village"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/grey_box"
                    android:visibility="gone"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:prompt="@string/village"
                    android:spinnerMode="dialog" />

                <com.sujalamsufalam.Widgets.MyTextView
                    android:id="@+id/tv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/school_name"
                    android:visibility="gone"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/medium_text" />

                <Spinner
                    android:id="@+id/spinner_school_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:background="@drawable/grey_box"

                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:prompt="@string/school_name"
                    android:spinnerMode="dialog" />

                <LinearLayout
                    android:id="@+id/voucher_date_filter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="gone"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/lighter_grey_box"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From Date"
                            android:textSize="@dimen/small_text" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/medium_grey" />

                        <TextView
                            android:id="@+id/txtDateFrom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textSize="@dimen/medium_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/lighter_grey_box"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To Date"
                            android:textSize="@dimen/small_text" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/medium_grey" />

                        <TextView
                            android:id="@+id/txtDateTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textSize="@dimen/medium_text" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/sort_button"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/right_arrow"
                        android:layout_margin="10dp"/>

                </LinearLayout>



            </LinearLayout>
        </ScrollView>

        <com.sujalamsufalam.Widgets.MyFontButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:background="@color/colorPink"
            android:text="@string/Submit"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </LinearLayout>
</layout>