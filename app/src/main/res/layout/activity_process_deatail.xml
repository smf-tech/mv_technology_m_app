<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:my_font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_feed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fastScrollEnabled="true"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_process_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:clipToPadding="false"
                android:padding="@dimen/dimen_10dp"
                android:scrollbars="vertical" />

            <LinearLayout
                android:id="@+id/layout_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:src="@drawable/ic_add_photo" />

                <com.sujalamsufalam.Widgets.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/edt_unit_purvizalele"
                    android:text="फोटो घ्या "
                    android:textSize="@dimen/large_text" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/butt_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <com.sujalamsufalam.Widgets.MyFontButton
            android:id="@+id/btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_weight="5"
            android:background="@color/colorPink"
            android:text="@string/Submit"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <com.sujalamsufalam.Widgets.MyFontButton
            android:id="@+id/btn_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_weight="5"
            android:background="@color/colorPink"
            android:text="@string/Save"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <com.sujalamsufalam.Widgets.MyFontButton
            android:id="@+id/btn_approve"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_weight="5"
            android:background="@color/colorPink"
            android:text="@string/approve"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:visibility="gone" />

        <com.sujalamsufalam.Widgets.MyFontButton
            android:id="@+id/btn_reject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_weight="5"
            android:background="@color/colorPink"
            android:text="@string/reject"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>